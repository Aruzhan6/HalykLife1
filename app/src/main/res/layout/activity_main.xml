<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_rectangle_76">

    <View
        android:id="@+id/backV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_back_defaul"/>

    <TextView
        android:id="@+id/numberContractTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="106dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/numberContract_text"
        android:textAppearance="@style/halyk_text"
        android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/generalInformationTv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberContractTv"
            android:text="@string/information_text"
            android:textAppearance="@style/information_text"
            android:background="@drawable/shape_text_bkg"
            android:drawablePadding="2dip"
            android:paddingRight="22.5dip"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:drawableRight="@drawable/ic_vector_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>