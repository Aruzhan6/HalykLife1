<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/rectangle_rounded_green">

    <TextView
        android:id="@+id/myPoliciesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="58dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/myPolicies_text"
        android:textAppearance="@style/white_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="16dp"
        android:layout_height="22dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/ic_buypolicy"
        app:layout_constraintRight_toLeftOf="@+id/buyPolicyTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buyPolicyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginRight="20dp"
        android:text="@string/buyPolicy_text"
        android:textAppearance="@style/yellow_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>